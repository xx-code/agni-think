# Agni â€” Environment Variables
# Copy this file to .env and fill in your values before deploying.
# =============================================================================

# -----------------------------------------------------------------------------
# Docker Registry
# The registry prefix used by the build/push scripts and docker-compose.yml
# Example: ghcr.io/your-username or registry.hub.docker.com/your-org
# -----------------------------------------------------------------------------
API_REGISTRY=your-registry.io/agni-api-spring-boot:latest
WEB_REGISTRY=your-registry.io/agni-web:latest
AGENT_REGISTRY=your-registry.io/agni-ai-agent:latest

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# Used by both the api service and the db service.
# -----------------------------------------------------------------------------
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=agni
DB_URL=jdbc:postgresql://db:5432/agni

# Agent (AI Assistant)
# API keys and service URLs for the AI agent
# Obtain your OpenAI API key from https://platform.openai.com/api-keys
# OLLAMA_LINK: LM Studio or Ollama instance URL (default for Docker: http://ollama:11434)
# QDRANT_LINK: Vector database URL (default for Docker: http://qdrant:6333)
# QDRANT_COLLECTION_NAME: Name of the vector collection for embeddings
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OLLAMA_LINK=http://ollama:11434
QDRANT_LINK=http://qdrant:6333
QDRANT_COLLECTION_NAME=agni_documents

# Adminer
# Port on which the Adminer database UI will be exposed on the host.
# -----------------------------------------------------------------------------
ADMINER_PORT=8888
